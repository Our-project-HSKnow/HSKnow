<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ShowSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="这是学科"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#000000"
        />

    <EditText
        android:id="@+id/ThisIsTitle"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:autoLink="all"
        android:background="@drawable/box"
        android:hint="标题..."
        android:maxLines="2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLength="30"/>


    <TextView
        android:id="@+id/title_watcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/30"
        android:layout_marginLeft="340dp"
        />

    <EditText
        android:id="@+id/ThisIsText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/box"
        android:gravity="left"
        android:hint="正文..."
        android:maxLines="8"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLength="400"/>

    <TextView
        android:id="@+id/content_watcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/400"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/Upload"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_loginbar_light"
        android:text="上传"
        android:textSize="22sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:translationY="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_problem_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="悬赏积分：0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/post_problem_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="增加悬赏积分可能吸引更多人回答问题哦"
                android:textAlignment="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>