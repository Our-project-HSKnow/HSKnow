<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500"
        motion:motionInterpolator="cubic(0.27,0.04,0.77,0.45)">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/log_card" />
       </KeyFrameSet>
        <OnClick motion:targetId="@id/button_tran_log"
            motion:clickAction="toggle" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/button_tran_log"
            motion:layout_constraintEnd_toEndOf="@+id/register_card"
            android:layout_width="55dp"
            android:layout_height="55dp"
            motion:layout_constraintTop_toTopOf="@+id/register_card" />
        <Constraint
            android:id="@+id/log_card"
            android:layout_width="300dp"
            android:layout_height="400dp"
            motion:layout_constraintBottom_toBottomOf="@id/register_card"
            motion:layout_constraintEnd_toEndOf="@id/register_card"
            motion:layout_constraintTop_toTopOf="@id/register_card"
            motion:layout_constraintStart_toStartOf="@id/register_card"
            android:alpha="1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/button_tran_log"
            motion:layout_constraintEnd_toEndOf="@+id/register_card"
            android:layout_width="55dp"
            android:layout_height="55dp"
            motion:layout_constraintTop_toTopOf="@+id/register_card"
            android:rotation="225" />
        <Constraint
            android:id="@+id/log_card"
            android:layout_width="300dp"
            android:layout_height="400dp"
            motion:layout_constraintBottom_toBottomOf="@id/register_card"
            motion:layout_constraintEnd_toEndOf="@+id/register_card"
            motion:layout_constraintTop_toTopOf="@id/register_card"
            motion:layout_constraintStart_toStartOf="@id/register_card"
            android:visibility="gone"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>